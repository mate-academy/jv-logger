<?xml version="1.0" encoding="UTF-8"?>
<Configuraton status="info">
    <Appenders>
        <Conslole name="LogToConsole" target="SYSTEM_OUT">
                <PatternLayout pattern="%d{HH:mm.SSS} %-5level %logger{36} - %msg%n"/>
        </Conslole>
        <File name="LogToFile" fileName="logs/app.log">
            <PatternLayout>
                <Pattern>%d %p %c:%L %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="mate.academy" level="info" additivity="false">
            <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="LogToFile"/>
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>
</Configuraton>
