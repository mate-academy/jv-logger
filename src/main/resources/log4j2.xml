<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <File name="LogToFile" fileName = "logs/problems.log">
            <PatternLayout pattern="%d [%t] %-5level s%logger{36}:%L - %msg%n"/>
        </File>
        <File name="RootToFile" fileName = "logs/rootError.log">
            <PatternLayout pattern="%d [%t] %-5level s%logger{36}:%L - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name = "mate.academy" level="info" additivity="false">
            <AppenderRef ref="LogToFile" />
        </Logger>
        <Root level="fatal">
            <AppenderRef ref="RootToFile"/>
        </Root>
    </Loggers>
</Configuration>
