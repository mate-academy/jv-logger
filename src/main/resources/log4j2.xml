<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Appenders>
        <File name="log4j2" fileName="logs/appLog">
            <PatternLayout>
                <Pattern>%d %p %c:%L %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="mate.academy" level="info" additivity="false">
            <AppenderRef ref="log4j2"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="log4j2"/>
        </Root>
    </Loggers>
</Configuration>
